---
import Layout from '@/layouts/Layout.astro'

interface Props {
  listTitle: string
  listItems: {
    title: string
    link: string
  }[]
}

const { listTitle, listItems } = Astro.props
---

<Layout>
  <div class="w-full p-8">
    <!-- Header Section -->
    <section class="text-center py-8 pb-12">
      <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight m-0">
        {listTitle}
      </h1>
    </section>

    <!-- Cards Grid -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 2xl:grid-cols-3 gap-4 max-w-7xl mx-auto"
    >
      {
        listItems.map((item, index) => (
          <a
            href={item.link}
            class="group flex items-center justify-between bg-white border-2 border-gray-200 rounded-2xl px-6 py-6 no-underline text-inherit transition-all duration-300 ease-in-out hover:-translate-y-2 hover:shadow-lg hover:border-gray-300 hover:bg-gray-50 opacity-0 animate-fadeIn shadow-sm"
            style={`animation-delay: ${index * 0.05}s`}
          >
            <h2 class="text-lg font-semibold text-gray-700 m-0">
              {item.title}
            </h2>
            <span class="text-2xl text-gray-500 font-bold transition-all duration-300 group-hover:text-gray-700 group-hover:translate-x-1">
              â†’
            </span>
          </a>
        ))
      }
    </div>
  </div>
</Layout>

<style>
  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.5s ease forwards;
  }

  @media (max-width: 768px) {
    .max-w-2xl {
      padding: 1.5rem;
    }
  }
</style>
