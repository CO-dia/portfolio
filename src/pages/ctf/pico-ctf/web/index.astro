---
import CardList from '@/components/ui/CardList.astro'
import Layout from '@/layouts/Layout.astro'
import { getCollection } from 'astro:content'

const challenges = await getCollection('ctf')

const webChallenges = challenges.filter((c) => c.id.startsWith('pico-ctf/web/'))

const challengesCards = webChallenges.map((challenge) => ({
  title: challenge.data.title,
  link: `/ctf/${challenge.slug}`,
}))
---

<CardList listTitle="picoCTF Web Challenges" listItems={challengesCards} />
